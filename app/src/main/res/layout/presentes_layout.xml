<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlt_presentes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/presentes_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:text="presentes_nome"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imageButton2" />

        <TextView
            android:id="@+id/presentes_matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presentes_nome"
            android:padding="2dp"
            android:paddingStart="8dp"
            android:text="presentes_matricula"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/imageButton2" />

        <ImageButton
            android:id="@+id/presentes_presente"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_check_black_24dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_mood_black_24dp" />
</RelativeLayout>